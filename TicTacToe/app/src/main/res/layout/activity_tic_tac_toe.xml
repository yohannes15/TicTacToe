<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicTacToeActivity">

    <TextView
        android:layout_gravity="center|top"
        android:textSize="30sp"
        android:text="Tic Tac Toe!!"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="top|center">

    <Button
        android:id="@+id/upper_left_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|right"
        android:textSize="45sp"
        android:onClick="tileClicked"
        />

    <Button
        android:id="@+id/upper_middle_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|center"
        android:textSize="45sp"
        />

    <Button
        android:id="@+id/upper_right_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|left"
        android:textSize="45sp"
        />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="top|center"
        android:layout_marginTop="8sp">>


        <Button
            android:id="@+id/middle_left_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="top|right"
            android:textSize="45sp"
            />

        <Button
            android:id="@+id/middle_middle_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="top|center"
            android:textSize="45sp"
            />

        <Button
            android:id="@+id/middle_right_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="top|left"
            android:textSize="45sp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="top|center"
        android:layout_marginTop="8sp">


        <Button
            android:id="@+id/lower_left_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="top|right"
            android:textSize="45sp"
            />

        <Button
            android:id="@+id/lower_middle_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="top|center"
            android:textSize="45sp"
            />

        <Button
            android:id="@+id/lower_right_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="top|left"
            android:textSize="45sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/with_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/computer_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/computer_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    </LinearLayout>


</GridLayout>